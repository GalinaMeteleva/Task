package by.tc.task01.service.validation;

import by.tc.task01.entity.criteria.Criteria;

public class Validator {
	
	public static boolean criteriaValidator(Criteria criteria)  {
		
		if(criteria != null)  {
			return true;
		}
		else {
			return false;
		}
	}
	public static boolean applianceDataValidator(List<String>appliancesData)  {
		
		for(int i = 0; i < appliancesData.size(); i++)  {
			if(appliancesData.get(i) != null)  {
				return true;
			}
			else {
				return false;
			}
		}
		return true;
	}
}
